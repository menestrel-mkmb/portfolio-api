// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Course {
  id        String @id @default(uuid())
  name      String @unique
  provedor  String
  category  String
  duration  Int
  verifyUrl String @map("verify_url")
}

model Work {
  id          String    @id @default(uuid())
  name        String    @unique
  occupation  String
  startDate   DateTime  @map("start_date")
  endData     DateTime? @map("end_date")
  description String
  category    String
  statement   String?
}
